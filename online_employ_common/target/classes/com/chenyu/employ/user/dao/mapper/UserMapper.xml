<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chenyu.employ.user.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.chenyu.employ.user.model.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
  </resultMap>
  <sql id="Base_Column_List" >
    id, email, password, status, create_time,upate_time
  </sql>
  
  <select id="getUserList" resultMap="BaseResultMap" parameterType="com.chenyu.employ.user.dto.UserDto">
  	select
  	<include refid="Base_Column_List" />
  	from user
  	<where>
    	<if test="email != null and email !=''"> and email = #{email} </if>
  		<if test="status != null">and status=#{status} </if>
	</where>
	limit #{offset},#{pageSize}
  </select>
  
  <select id="findUserById" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from user
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <insert id="register" parameterType="com.chenyu.employ.user.model.User" >
    insert into user (id, email, password)
    values (#{id,jdbcType=INTEGER}, #{email,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
  </insert>
  
  <update id="changeUserStatus" parameterType="com.chenyu.employ.user.model.User" >
    update user
    <set >
      <if test="status != null" >
        status = #{status,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>